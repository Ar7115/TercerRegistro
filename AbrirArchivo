#Abrir un archivo


def main():
    archivo= open("datos.txt", "r", encoding="UTF-8") #encoding UTF-8 para acentos y caracteres especiales
    texto= archivo.read()       #Leer todo el contenido del texto, y dejarlo en la variable texto
    print(texto) #Imprime Texto
    print(texto.upper()) #Imprime en mayúsculas
    print(texto.lower()) #Imprime en minúsculas
    print(texto.title()) #Imprime en título (mayúsculas al principio)


main() 
